---
import { posts } from '../../data/posts';
import BaseLayout from '../../layouts/BaseLayout.astro';
const { slug } = Astro.params;
const post = posts.find(p => p.slug === slug);
---

<BaseLayout title={post ? post.title : 'Not Found'}>
  {post ? (
    <article class="prose dark:prose-invert max-w-3xl mx-auto p-6">
      <h1>{post.title}</h1>
      <p class="text-sm text-gray-500">{post.date}</p>
      <img src={post.image} alt={post.title} class="my-4 rounded-xl" />
      <p>{post.excerpt}</p>
      <a href="https://affiliate-link.com/tool" class="mt-6 inline-block bg-green-700 text-white px-4 py-2 rounded" rel="nofollow sponsored" target="_blank">
        ðŸŒ¿ Buy Gardening Tools
      </a>
    </article>
  ) : (
    <div class="max-w-3xl mx-auto p-6 text-center text-red-600">
      <h1>Post Not Found</h1>
      <p>The blog post you are looking for does not exist.</p>
    </div>
  )}
</BaseLayout>
